<?xml version="1.0"?>
<!DOCTYPE compass-core-mapping PUBLIC
    "-//Compass/Compass Core Mapping DTD 1.0//EN"
    "http://www.opensymphony.com/compass/dtd/compass-core-mapping.dtd">

<compass-core-mapping package="com.foxconn.cic.model">
         <class name="Website" alias="website" root="false">
         	<id name="id" />
         	<property name="id">
                        <meta-data>websiteid</meta-data>
            </property>
         	<property name="name">
                        <meta-data term-vector="positions_offsets">website</meta-data>
            </property>
            <property name="url">
                        <meta-data>websiteurl</meta-data>
            </property>
         </class>
</compass-core-mapping>
