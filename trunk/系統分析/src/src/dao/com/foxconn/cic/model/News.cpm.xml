<?xml version="1.0"?>
<!DOCTYPE compass-core-mapping PUBLIC
    "-//Compass/Compass Core Mapping DTD 1.0//EN"
    "http://www.opensymphony.com/compass/dtd/compass-core-mapping.dtd">

<compass-core-mapping package="com.foxconn.cic.model">
	<class name="News" alias="news" root="true">
		<id name="id"/>
		<property name="title">
			<meta-data term-vector="positions_offsets">title</meta-data>
		</property>
		<property name="title" override="false">
			<meta-data index="un_tokenized">untokenizedtitle</meta-data>
		</property>
		<property name="summary">
			<meta-data term-vector="positions_offsets">summary</meta-data>
		</property>
		<property name="content">
			<meta-data converter="html" term-vector="positions_offsets">content</meta-data>
		</property>
		<property name="author">
			<meta-data term-vector="positions_offsets">author</meta-data>
		</property>
		<property name="publisher">
			<meta-data>publisher</meta-data>
		</property>
		<property name="url">
			<meta-data>url</meta-data>
		</property>
		<property name="baseUrl">
			<meta-data>baseurl</meta-data>
		</property>
		<property name="url" override="false">
			<meta-data index="un_tokenized">untokenizedurl</meta-data>
		</property>
		<property name="createdDate">
			<meta-data index="un_tokenized" format="yyyyMMdd HH:mm">createddate</meta-data>
		</property>
		<property name="updatedDate">
			<meta-data index="un_tokenized" format="yyyyMMdd HH:mm">updateddate</meta-data>
		</property>
		<property name="publishDate">
			<meta-data index="un_tokenized" format="yyyyMMdd">publishdate</meta-data>
		</property>
		<component name="website" ref-alias="website"  	/>
		<component name="images" ref-alias="newsimage"/>
	</class>
</compass-core-mapping>
