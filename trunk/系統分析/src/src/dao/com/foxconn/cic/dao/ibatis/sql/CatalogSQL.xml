<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC "-//iBATIS.com//DTD SQL Map 2.0//EN" 
    "http://www.ibatis.com/dtd/sql-map-2.dtd">

<sqlMap namespace="CatalogSQL">
    <typeAlias alias="catalog" type="com.foxconn.cic.model.Catalog"/>

    <parameterMap id="addParam" class="catalog">
        <parameter property="position" jdbcType="VARCHAR" javaType="int"/>
        <parameter property="children" jdbcType="VARCHAR" javaType="java.util.List"/>
        <parameter property="description" jdbcType="VARCHAR" javaType="java.lang.String"/>
        <parameter property="keywords" jdbcType="VARCHAR" javaType="java.util.List"/>
        <parameter property="name" jdbcType="VARCHAR" javaType="java.lang.String"/>
        <parameter property="parent" jdbcType="VARCHAR" javaType="com.foxconn.cic.model.Catalog"/>
        <parameter property="type" jdbcType="VARCHAR" javaType="com.foxconn.cic.model.CatalogType"/>
    </parameterMap>

    <parameterMap id="updateParam" class="catalog">
        <parameter property="position" jdbcType="VARCHAR" javaType="int"/>
        <parameter property="children" jdbcType="VARCHAR" javaType="java.util.List"/>
        <parameter property="description" jdbcType="VARCHAR" javaType="java.lang.String"/>
        <parameter property="id" jdbcType="INTEGER" javaType="java.lang.Long"/>
        <parameter property="keywords" jdbcType="VARCHAR" javaType="java.util.List"/>
        <parameter property="name" jdbcType="VARCHAR" javaType="java.lang.String"/>
        <parameter property="parent" jdbcType="VARCHAR" javaType="com.foxconn.cic.model.Catalog"/>
        <parameter property="type" jdbcType="VARCHAR" javaType="com.foxconn.cic.model.CatalogType"/>
    </parameterMap>

    <resultMap id="catalogResult" class="catalog">
        <result property="position" column="position"/>
        <result property="children" column=""/>
        <result property="description" column=""/>
        <result property="id" column=""/>
        <result property="keywords" column=""/>
        <result property="name" column=""/>
        <result property="parent" column=""/>
        <result property="type" column=""/>
    </resultMap>

    <select id="getCatalogs" resultMap="catalogResult">
    <![CDATA[
        select * from 
    ]]>
    </select>

    <select id="getCatalog" resultMap="catalogResult">
    <![CDATA[
        select * from 
         where  = #value#
    ]]>
    </select>

    <insert id="addCatalog" parameterMap="addParam">
        <!--selectKey resultClass="java.lang.Long" keyProperty="id" >
            SELECT SEQ_.NextVal AS id FROM DUAL
        </selectKey-->
        <selectKey resultClass="java.lang.Long" keyProperty="id">
            SELECT LAST_INSERT_ID() AS id
        </selectKey>
        <![CDATA[
            insert into  (position,,,,,,)
            values ( ?,?,?,?,?,?,? )
        ]]>
    </insert>

    <update id="updateCatalog" parameterMap="updateParam">
    <![CDATA[
        update  set
                   position = ?,
                    = ?,
                    = ?,
                    = ?,
                    = ?,
                    = ?,
                    = ?
        where  = ?
    ]]>
    </update>

    <delete id="deleteCatalog">
    <![CDATA[
        delete from 
         where  = #value#
    ]]>
    </delete>
</sqlMap>
